doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
        title Document
    body 
        .container
        form#appointmentForm(action=`/turnos/reservarTurno/${id_turno}` method="POST")

          .form-group.mt-3
            label(for="motivo_consulta") Motivo de la Consulta
            input#motivo_consulta.form-control(type="text" name="motivo_consulta" maxlength="30")

          .form-group.mt-3
            label(for="id_paciente") Paciente
            select#id_paciente.form-control(name="id_paciente" required)
              option(value="") Seleccione un paciente
              each paciente in pacientes
                    option(value=paciente.id_paciente) #{paciente.nombre} #{paciente.apellido} #{paciente.dni}


          button.btn.btn-primary(type="submit") Crear Turno