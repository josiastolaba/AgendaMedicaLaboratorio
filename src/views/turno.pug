doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Turno
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    form#appointmentForm(action="/turno/crearTurno" method="POST")
      .form-group
        label(for="inicio_turno") Inicio del Turno
        input#inicio_turno.form-control(type="time" name="inicio_turno" required)

      .form-group.mt-3
        label(for="fin_turno") Fin del Turno
        input#fin_turno.form-control(type="time" name="fin_turno")

      .form-group.mt-3
        label(for="id_estado_turno") Estado del Turno (ID)
        input#id_estado_turno.form-control(type="number" name="id_estado_turno" required)

      .form-group.mt-3
        label(for="id_sobreTurno") ID del Sobre Turno
        input#id_sobreTurno.form-control(type="number" name="id_sobreTurno")

      .form-group.mt-3
        label(for="motivo_consulta") Motivo de la Consulta
        input#motivo_consulta.form-control(type="text" name="motivo_consulta" maxlength="30")

      .form-group.mt-3
        label(for="id_paciente") ID del Paciente
        input#id_paciente.form-control(type="number" name="id_paciente" required)

      .form-group.mt-3
        label(for="id_agenda") ID de la Agenda
        input#id_agenda.form-control(type="number" name="id_agenda" required)

      button.btn.btn-primary(type="submit") Crear Turno
